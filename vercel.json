{
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "./api/index.ts" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "next.config.js", "use": "@vercel/next" }
  ]
}
